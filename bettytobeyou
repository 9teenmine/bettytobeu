  <script>
    let currentPage = 1;
    const totalPages = 7;
    const videos = {
      3: document.getElementById('video1'),
      4: document.getElementById('video2'),
      6: document.getElementById('video3')
    };
    const intro = document.getElementById('intro-music');
    const music = document.getElementById('confession-music');

    function nextPage(num) { changePage(num); }
    function prevPage(num) { changePage(num); }

    function changePage(num) {
      document.querySelectorAll('section').forEach(sec => sec.classList.remove('active'));
      document.getElementById('page' + num).classList.add('active');
      currentPage = num;

      // Pause all videos
      for (let key in videos) {
        videos[key].contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
      }

      // Play video if page has one
      if (videos[num]) {
        videos[num].contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
      }

      // Handle music
      if (num === 7) {
        music.play();
      } else {
        music.pause();
      }
    }

    // Floating hearts generator
    setInterval(() => {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.innerHTML = '‚ù§Ô∏è';
      heart.style.left = Math.random() * window.innerWidth + 'px';
      heart.style.fontSize = (20 + Math.random() * 30) + 'px';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }, 800);

    function celebrate(choice) {
      if (choice === 'yes') {
        alert('Yay! ‚ù§Ô∏è Let‚Äôs celebrate! üéâ');
      } else {
        alert('That‚Äôs okay üí´ I just wanted you to know how I feel.');
      }
    }
  </script>
